<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiyibatuku.photo.ui.activity.MainActivity"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ececec"/>

    <RadioGroup
        android:id="@+id/rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_photo"
            android:text="作品"
            android:drawableTop="@drawable/selector_photo_nav"
            style="@style/BottomBarStyle"
            />
        <RadioButton
            android:id="@+id/rb_classify"
            android:text="分类"
            android:drawableTop="@drawable/selector_classify_nav"
            style="@style/BottomBarStyle"
            />
        <RadioButton
            android:id="@+id/rb_user"
            android:text="自己"
            android:drawableTop="@drawable/selector_user_nav"
            style="@style/BottomBarStyle"
            />

    </RadioGroup>


</LinearLayout>

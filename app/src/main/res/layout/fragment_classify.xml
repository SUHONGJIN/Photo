<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_bing_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="6dp">

                    <ImageView
                        android:id="@+id/iv_everyday_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_cc"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:padding="6dp"
                        android:text="每日一图"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_bing_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="6dp"
                            android:text="感恩大山的馈赠"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_bing_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="5"
                            android:paddingBottom="6dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="4dp"
                            android:text="今天是国际山岳日，联合国为大山们创立了这个节日。据了解世界上有一半以上的人口依靠山脉获取淡水、食物和清洁能源。当山区生态系统受到气候变化和土地退化的威胁时，不仅危及植物和动物，也危及依靠山脉生存的人们。壁纸中这一幕是从邻国肯尼亚的楚鲁山国家公园眺望到的乞力马扎罗山。科学家们正在密切监测这座山峰不断缩小的冰川和冰原。"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <com.yybtuku.photo.view.ClassifyItemView
                android:id="@+id/classify_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setClassifyContent="@string/classify_item1"
                app:setClassifyIcon="@drawable/image_classify1"
                app:setClassifyTitle="@string/classify1" />

            <com.yybtuku.photo.view.ClassifyItemView
                android:id="@+id/classify_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setClassifyIcon="@drawable/image_classify2"
                app:setClassifyTitle="@string/classify2"
                app:setClassifyContent="@string/classify_item2"/>

            <com.yybtuku.photo.view.ClassifyItemView
                android:id="@+id/classify_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setClassifyIcon="@drawable/image_classify3"
                app:setClassifyTitle="@string/classify3"
                app:setClassifyContent="@string/classify_item3"/>

            <com.yybtuku.photo.view.ClassifyItemView
                android:id="@+id/classify_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setClassifyIcon="@drawable/image_classify4"
                app:setClassifyTitle="@string/classify4"
                app:setClassifyContent="@string/classify_item4"/>

            <com.yybtuku.photo.view.ClassifyItemView
                android:id="@+id/classify_item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setClassifyIcon="@drawable/image_classify5"
                app:setClassifyTitle="@string/classify5"
                app:setClassifyContent="@string/classify_item5"/>

        </LinearLayout>

    </ScrollView>


</com.scwang.smartrefresh.layout.SmartRefreshLayout>

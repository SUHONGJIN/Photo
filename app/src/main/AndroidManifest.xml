<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yybtuku.photo">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />'
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <permission android:name="android.permission.DELETE_PACKAGES" />
    <!-- 8.0安装需要的权限 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name="com.yybtuku.photo.mjb.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.yybtuku.photo.mjb.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yybtuku.photo.mjb.WebViewActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.yybtuku.photo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name="com.yybtuku.photo.ui.activity.MainActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.LoginActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.RegisterActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.ShowImageActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.FeedBackActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.SettingActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.AboutActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.MyDownloadActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.LikeActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.ModifyUserDataActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.WelcomeGuideActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.UserInfoActivity" />
        <activity android:name="com.yybtuku.photo.ui.activity.PhotoListActivity"></activity>
    </application>

</manifest>